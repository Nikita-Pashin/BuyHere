{
  "compilerOptions": {
    "outDir": "./build/",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "*": ["./src/*"]
    },
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
    }
  },
  "include": [
    "./config/jest/**/*.tsx",
    "./config/jest/**/*.ts",
    "./config/build/**/*.ts",
    "./config/storybook/**/*.ts",
    "./src/**/*.tsx",
    "./src/**/*.ts",
    "./babel.config.json",
    "./.eslintrc.js",
    "./webpack.config.ts",
  ],
}